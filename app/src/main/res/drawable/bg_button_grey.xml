<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>

            <solid android:color="@color/grey"/>
            <corners
                android:radius="25dp" />
        </shape>
    </item>

    <item>
        <shape>

            <solid android:color="@color/grey_dark"/>
            <corners
                android:radius="25dp" />
        </shape>
    </item>
</selector>
